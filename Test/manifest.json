{
  "manifest_version": 2,
  
  "name": "Flowvisor (Project Workflow Manager)",
  "description": "Project Flow with Flowvisor",
  "version": "1.0",
  "externally_connectable": {
    "matches": [
      "https://*.google.com/*"]
  },
  "permissions": [
    "https://*.google.com/",
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}